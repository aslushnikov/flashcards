extends layout

block head
  link(rel="stylesheet", href="/stylesheets/screen-words.css")
  link(rel="stylesheet", href="/stylesheets/title.css")
  script(src="/bower_components/jquery-hammerjs/jquery.hammer-full.min.js")
  script(src="/javascripts/words.js", type="text/javascript")

block content
  a.entry.template
    .original
    .tags
    .translation
  .date.template
  .title
    a.title-item.left(href="/") Menu
    .title-item.right Words: #{words.length}
  .sort-order
    .sort-item.alphabetically natural
    .sort-item.groupby-day date
    .sort-item.groupby-tag tag
  .dictionary
    .header
      div Original
      div Tags
      div Translation
    .dictionary-container

  script window.bootstrapWords = !{JSON.stringify(words)};
