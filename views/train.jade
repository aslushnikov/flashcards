extends layout

block head
  link(rel="stylesheet", href="/stylesheets/train.css")
  script(type="text/javascript", src="/javascripts/jquery.hammer-full.min.js")
  script(type="text/javascript", src="/javascripts/jquery-deparam.min.js")
  script(type="text/javascript", src="/javascripts/train.js")

block content
  .title
    a.title-item.left(href="/words") Words
    .title-item.right Words:
      span.word-count #{words.length}
  .box.question
    fieldset
      legend Translation
    .text.question Speak
  .box.answer
    fieldset
      legend Original
    .text.answer Hablar
    .hint-box
      .hint Single tap to reveal word
      .hint Long tap to reveal first letter
  .buttons
    .button.next Next
