extends layout

block head
  link(rel="stylesheet", href="/stylesheets/new-word.css")
  script(src="/bower_components/jquery-hammerjs/jquery.hammer-full.min.js")
  script(src="/javascripts/add.js")

block content
  .title
    .title-item.left
      a(href="/") Menu
    .title-item.right
      a Add
  .form
    fieldset.entry.original
      legend Original
      .input(contenteditable="true", autofocus)
    fieldset.entry.translation
      legend Translation
      .input(contenteditable="true")
    fieldset.active-tags
      legend Active tags
      .tagcloud
        .new-tag-button New tag
    fieldset.all-tags
      legend All tags
      .tagcloud
        each tag in user.tags
          .tag #{tag.name}
